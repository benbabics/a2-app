<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wex.wol.accountmaintenance"
    version="1.1.1"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0">

    <name>WEXonline</name>

    <description>
        Account Maintenance for Classic and WOL NP customers.
    </description>

    <author email="MobileDevelopment@wexinc.com" href="http://www.wexinc.com">
        WEX Mobile Development Team
    </author>

    <content src="index.html" />

    <feature name="http://api.phonegap.com/1.0/device" />

    <!-- Cross Platform preferences -->
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="false" />

    <!-- TODO: these may be for PhoneGap Build and may be able to be removed -->
    <preference name="android-installLocation" value="auto" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="permissions" value="none" />
    <preference name="prerendered-icon" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />

    <!-- Android specific preferences -->
    <preference name="ErrorUrl" value="error.html" />
    <preference name="LoadUrlTimeoutValue" value="18000" />
    <preference name="KeepRunning" value="false" />
    <preference name="SplashScreenDelay" value="20000" />

    <!-- iOS specific preferences -->
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />

    <icon gap:platform="android" gap:density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="ios" height="57" width="57" src="res/icon/ios/icon-57.png" />
    <icon gap:platform="ios" height="72" width="72" src="res/icon/ios/icon-72.png" />
    <icon gap:platform="ios" height="114" width="114" src="res/icon/ios/icon-57-2x.png" />
    <icon gap:platform="ios" height="144" width="144" src="res/icon/ios/icon-72-2x.png" />

    <gap:splash gap:platform="android" gap:density="ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:density="xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="ios" height="480" width="320" src="res/screen/ios/screen-iphone-portrait.png" />
    <gap:splash gap:platform="ios" height="960" width="640" src="res/screen/ios/screen-iphone-portrait-2x.png" />
    <gap:splash gap:platform="ios" height="1024" width="768" src="res/screen/ios/screen-ipad-portrait.png" />
    <gap:splash gap:platform="ios" height="768" width="1024" src="res/screen/ios/screen-ipad-landscape.png" />

    <access origin="*" /><!-- FOR DEV ONLY -->
    <access origin="*.wexmobile.com"/> <!-- Web Services domain -->

</widget>
